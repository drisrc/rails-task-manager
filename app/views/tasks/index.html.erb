<h1>My tasks</h1>
<ul id="tasks">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa fa-check-square-o"></i>
      <% else %>
        <i class="fa fa-square-o"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id) %>
    </li>
  <% end %>
</ul>

<hr>
<%= link_to "Add a new task", new_task_path %>
