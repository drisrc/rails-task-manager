

<h1><%= @task.title %></h1>

<div class="alert alert-secondary" role="alert">
  <p ><%= @task.details %></p>
</div>

<% if @task.completed == true %>
  <p><%='This task is completed' %></p>
<% else %>
  <p><%='This task is not completed yet' %></p>
<% end %>

<%= link_to "Edit this task", edit_task_path(@task.id) %>

<hr>
<%= link_to "Back to list", tasks_path %>
